{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "etl-weather-analytics"
		},
		"BlobStorage_For_API_Output_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'BlobStorage_For_API_Output'"
		},
		"LinkedRestService_CurrentAndForecasted_Weather_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'LinkedRestService_CurrentAndForecasted_Weather'"
		},
		"LinkedRestService_CurrentAndForecasted_Weather_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "http://api.openweathermap.org/"
		},
		"LinkedRestService_CurrentAndForecasted_Weather_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "dbkulkarni@gmail.com"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas Token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"BlobStorage_For_API_Output_connectionString": {
						"value": "[parameters('BlobStorage_For_API_Output_connectionString')]"
					},
					"LinkedRestService_CurrentAndForecasted_Weather_password": {
						"value": "[parameters('LinkedRestService_CurrentAndForecasted_Weather_password')]"
					},
					"LinkedRestService_CurrentAndForecasted_Weather_properties_typeProperties_url": {
						"value": "[parameters('LinkedRestService_CurrentAndForecasted_Weather_properties_typeProperties_url')]"
					},
					"LinkedRestService_CurrentAndForecasted_Weather_properties_typeProperties_userName": {
						"value": "[parameters('LinkedRestService_CurrentAndForecasted_Weather_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}