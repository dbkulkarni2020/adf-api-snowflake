{
	"name": "adf-historical-forcast",
	"properties": {
		"description": "Captures historical forecast for meteorological stations from data.gov.uk, and then for the above meteorological stations, constantly ingest current weather and future forecasts data from openweathermap",
		"activities": [
			{
				"name": "lkp_getcitylist",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": false,
							"wildcardFileName": "*.json",
							"enablePartitionDiscovery": false
						}
					},
					"dataset": {
						"referenceName": "blob_historical_weather",
						"type": "DatasetReference"
					},
					"firstRowOnly": true
				}
			},
			{
				"name": "ForEach1",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "lkp_getcitylist",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('lkp_getcitylist').output",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "WebActivity1",
							"type": "WebActivity",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"url": "http://api.openweathermap.org/data/2.5/weather",
								"method": "GET",
								"headers": {
									"APPKEY": "3b57dd0a2acb41fc8430fc63feb7e474",
									"q": {
										"value": "@activity('lkp_getcitylist').output",
										"type": "Expression"
									}
								},
								"linkedServices": [
									{
										"referenceName": "LinkedService_REST_Historical_Forcast",
										"type": "LinkedServiceReference"
									}
								],
								"datasets": [
									{
										"referenceName": "historical_forcast",
										"type": "DatasetReference"
									}
								]
							}
						}
					]
				}
			}
		],
		"concurrency": 1,
		"annotations": []
	}
}