{
	"name": "Outer_Pipeline",
	"properties": {
		"description": "This Pipeline execute inner pipeline which loops through list of cities and pulls weather logs for these cities",
		"activities": [
			{
				"name": "Exec_Copy_API_To_Blob",
				"description": "This executes internal pipeline ",
				"type": "ExecutePipeline",
				"dependsOn": [
					{
						"activity": "CityList",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"pipeline": {
						"referenceName": "COPY_API_TO_BLOB",
						"type": "PipelineReference"
					},
					"waitOnCompletion": true
				}
			},
			{
				"name": "CityList",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"wildcardFileName": "*.json",
							"enablePartitionDiscovery": false
						}
					},
					"dataset": {
						"referenceName": "Blob_CityList",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			}
		],
		"annotations": []
	}
}